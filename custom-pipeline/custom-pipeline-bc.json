{
    "kind": "BuildConfig",
    "apiVersion": "build.openshift.io/v1",
    "metadata": {
        "name": "custom-pipeline"
    },
    "spec": {
        "source": {
            "type": "Git",
            "git": {
                "uri": "https://github.com/fopnet/DO288-apps.git",
                "ref": "master"
            },
            "contextDir": "books"
        },
        "strategy": {
            "type": "JenkinsPipeline",
            "jenkinsPipelineStrategy": {
                "jenkinsfilePath": "jenkins/Jenkinsfile"
            }
        }
    }
}
